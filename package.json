{
  "name": "pacman-redux",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "test": "node --test",
    "build": "node scripts/build.mjs",
    "start": "node server.js",
    "electron:prep": "node scripts/prepare-electron.mjs",
    "electron:start": "npm run electron:prep && electron electron/main.js",
    "electron:build": "npm run build && npm run electron:prep && electron-builder"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "esbuild": "^0.19.9"
  },
  "dependencies": {
    "electron-updater": "^6.1.1"
  },
  "build": {
    "appId": "com.yourname.pacmanredux",
    "productName": "Pac-Man Redux",
    "directories": {
      "buildResources": "electron/resources"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "yourname",
        "repo": "pacman-redux",
        "releaseType": "draft"
      }
    ],
    "mac": {
      "icon": "electron/resources/icon.png",
      "hardenedRuntime": true,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.plist",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "electron/resources/icon.png",
      "publisherName": "Your Name",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "electron/resources/icon.png",
      "category": "Game",
      "target": [
        "AppImage"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
